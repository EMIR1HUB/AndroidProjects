<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/developerPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_photo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/developerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Сулейманов Эмир"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:lineSpacingExtra="8sp"
        android:text="Java developer"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:lineSpacingExtra="8sp"
        android:text="Дата рождения: 23.01.2003 \nТелефон: +7 987 416 27 58 \nE-mail: emir-23.03@mail.ru"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
